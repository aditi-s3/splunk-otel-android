<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/scroll_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.wireframe.WireframeViewsFragment"
	tools:ignore="UseAppTint,HardcodedText,TextFields,UseCompatTextViewDrawableXml,UnusedAttribute,ContentDescription,RtlCompat,RtlHardcoded,RtlSymmetry">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true"
		android:padding="20dp">

		<TextView
			android:id="@+id/surface_view_title"
			style="@style/H2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="GLSurface"
			app:layout_constraintTop_toTopOf="parent" />

		<com.smartlook.app.view.SimpleGLSurfaceView
			android:id="@+id/surface_view_1"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_marginTop="30dp"
			android:scaleX="1.25"
			android:scaleY="1.25"
			app:layout_constraintEnd_toStartOf="@id/surface_view_2"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/surface_view_title" />

		<com.smartlook.app.view.SimpleGLSurfaceView
			android:id="@+id/surface_view_2"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_marginTop="30dp"
			android:scaleX="1.25"
			android:scaleY="1.25"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/surface_view_1"
			app:layout_constraintTop_toBottomOf="@id/surface_view_title" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Button"
			app:layout_constraintBottom_toBottomOf="@id/surface_view_1"
			app:layout_constraintEnd_toStartOf="@id/surface_view_2"
			app:layout_constraintStart_toEndOf="@id/surface_view_1"
			app:layout_constraintTop_toTopOf="@id/surface_view_1" />

		<TextView
			android:id="@+id/texture_view_title"
			style="@style/H2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:text="TextureView"
			app:layout_constraintTop_toBottomOf="@id/surface_view_1" />

		<com.smartlook.app.view.CanvasTextureView
			android:id="@+id/texture_view_1"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_marginTop="30dp"
			android:scaleX="1.25"
			android:scaleY="1.25"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/texture_view_title" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="60dp"
			android:text="Button"
			app:layout_constraintBottom_toBottomOf="@id/texture_view_1"
			app:layout_constraintStart_toStartOf="@id/texture_view_1"
			app:layout_constraintTop_toTopOf="@id/texture_view_1" />

		<TextView
			android:id="@+id/dialog_title"
			style="@style/H2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:text="Dialog"
			app:layout_constraintTop_toBottomOf="@id/texture_view_1" />

		<Button
			android:id="@+id/dialog_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="AlertDialog"
			android:textAllCaps="false"
			android:translationZ="1000dp"
			app:layout_constraintTop_toBottomOf="@id/dialog_title" />

		<Button
			android:id="@+id/dialog_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="AlertDialog no dim"
			android:textAllCaps="false"
			android:translationZ="1000dp"
			app:layout_constraintTop_toBottomOf="@id/dialog_1" />

		<Button
			android:id="@+id/dialog_3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="DialogFragment"
			android:textAllCaps="false"
			android:translationZ="1000dp"
			app:layout_constraintTop_toBottomOf="@id/dialog_2" />

		<Button
			android:id="@+id/dialog_4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:elevation="1000dp"
			android:text="DialogActivity"
			android:textAllCaps="false"
			app:layout_constraintTop_toBottomOf="@id/dialog_3" />

		<Button
			android:id="@+id/dialog_5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:elevation="1000dp"
			android:text="BottomSheetDialogFragment"
			android:textAllCaps="false"
			app:layout_constraintTop_toBottomOf="@id/dialog_4" />

		<Button
			android:id="@+id/dialog_6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:elevation="1000dp"
			android:text="WindowManager"
			android:textAllCaps="false"
			app:layout_constraintTop_toBottomOf="@id/dialog_5" />

		<TextView
			android:id="@+id/toast_title"
			style="@style/H2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Toast"
			app:layout_constraintTop_toBottomOf="@id/dialog_6" />

		<Button
			android:id="@+id/toast_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="System Toast"
			android:textAllCaps="false"
			android:translationZ="1000dp"
			app:layout_constraintTop_toBottomOf="@id/toast_title" />

		<Button
			android:id="@+id/toast_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Custom Toast"
			android:textAllCaps="false"
			android:translationZ="1000dp"
			app:layout_constraintTop_toBottomOf="@id/toast_1" />

		<TextView
			android:id="@+id/spinner_title"
			style="@style/H2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Spinner"
			app:layout_constraintTop_toBottomOf="@id/toast_2" />

		<Spinner
			android:id="@+id/spinner_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/spinner_title"
			tools:listitem="@layout/item_example" />

		<TextView
			android:id="@+id/sensitivity_title"
			style="@style/H2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Sensitivity"
			app:layout_constraintTop_toBottomOf="@id/spinner_1" />

		<Button
			android:id="@+id/sensitivity_animation"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:text="Toggle visibility"
			android:textAllCaps="false"
			app:layout_constraintTop_toBottomOf="@id/sensitivity_title" />

		<TextView
			android:id="@+id/text_view_sensitive_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:background="#f0f"
			android:justificationMode="inter_word"
			android:padding="10dp"
			android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
			app:layout_constraintTop_toBottomOf="@id/sensitivity_animation" />

		<TextView
			android:id="@+id/text_view_sensitive_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="#f0f"
			android:justificationMode="inter_word"
			android:padding="10dp"
			android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
			app:layout_constraintTop_toBottomOf="@id/text_view_sensitive_1" />

		<View
			android:id="@+id/cover_1"
			android:layout_width="30dp"
			android:layout_height="100dp"
			android:background="#143188"
			app:layout_constraintBottom_toBottomOf="@id/text_view_sensitive_2"
			app:layout_constraintEnd_toEndOf="@id/text_view_sensitive_1"
			app:layout_constraintStart_toEndOf="@id/cover_4"
			app:layout_constraintTop_toTopOf="@id/text_view_sensitive_1" />

		<View
			android:id="@+id/cover_2"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_margin="25dp"
			android:background="#143188"
			app:layout_constraintBottom_toBottomOf="@id/text_view_sensitive_2"
			app:layout_constraintEnd_toEndOf="@id/text_view_sensitive_2"
			app:layout_constraintStart_toStartOf="@id/text_view_sensitive_2"
			app:layout_constraintTop_toTopOf="@id/text_view_sensitive_2" />

		<View
			android:id="@+id/cover_3"
			android:layout_width="30dp"
			android:layout_height="0dp"
			android:layout_marginTop="-10dp"
			android:layout_marginBottom="-10dp"
			android:background="#143188"
			app:layout_constraintBottom_toBottomOf="@id/text_view_sensitive_2"
			app:layout_constraintEnd_toStartOf="@id/cover_4"
			app:layout_constraintStart_toStartOf="@id/text_view_sensitive_2"
			app:layout_constraintTop_toTopOf="@id/text_view_sensitive_1" />

		<View
			android:id="@+id/cover_4"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="#143188"
			app:layout_constraintBottom_toBottomOf="@id/text_view_sensitive_1"
			app:layout_constraintEnd_toEndOf="@id/text_view_sensitive_1"
			app:layout_constraintStart_toStartOf="@id/text_view_sensitive_1"
			app:layout_constraintTop_toTopOf="@id/text_view_sensitive_1" />

		<TextView
			android:id="@+id/text_view_sensitive_3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="#f0f"
			android:justificationMode="inter_word"
			android:padding="10dp"
			android:text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text. All the Lorem Ipsum generators on the Internet tend to repeat predefined chunks as necessary, making this the first true generator on the Internet. It uses a dictionary of over 200 Latin words, combined with a handful of model sentence structures, to generate Lorem Ipsum which looks reasonable. The generated Lorem Ipsum is therefore always free from repetition, injected humour, or non-characteristic words etc."
			app:layout_constraintTop_toBottomOf="@id/text_view_sensitive_2" />

		<TextView
			android:id="@+id/cover_5"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="#bddf"
			android:gravity="center"
			android:padding="20dp"
			android:text="Will be covered because of transparent background"
			android:textColor="#000"
			app:layout_constraintBottom_toBottomOf="@id/text_view_sensitive_3"
			app:layout_constraintEnd_toStartOf="@id/cover_6"
			app:layout_constraintStart_toStartOf="@id/text_view_sensitive_3"
			app:layout_constraintTop_toTopOf="@id/text_view_sensitive_3" />

		<TextView
			android:id="@+id/cover_6"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="#fdf"
			android:gravity="center"
			android:padding="20dp"
			android:text="Will be visible thanks to opaque background"
			android:textColor="#000"
			app:layout_constraintBottom_toBottomOf="@id/text_view_sensitive_3"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/cover_5"
			app:layout_constraintTop_toTopOf="@id/text_view_sensitive_3" />

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/sensitive_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:nestedScrollingEnabled="false"
			android:orientation="vertical"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@id/text_view_sensitive_3"
			tools:itemCount="3"
			tools:listitem="@layout/item_sensitive" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>