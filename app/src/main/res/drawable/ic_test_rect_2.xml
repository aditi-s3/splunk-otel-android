<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:left="10dp"
		android:top="10dp">
		<layer-list>
			<item
				android:width="40dp"
				android:height="40dp">
				<shape>
					<solid android:color="#f22" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<inset android:insetTop="50dp">
			<layer-list>
				<item
					android:width="40dp"
					android:height="40dp"
					android:left="50dp">
					<shape>
						<solid android:color="#22f" />
					</shape>
				</item>
			</layer-list>
		</inset>
	</item>
</layer-list>