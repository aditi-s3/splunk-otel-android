<ripple xmlns:android="http://schemas.android.com/apk/res/android"
	android:color="#fff">
	<item android:id="@android:id/mask">
		<shape>
			<solid android:color="#fff" />
		</shape>
	</item>
	<item
		android:width="60dp"
		android:height="20dp"
		android:left="20dp"
		android:right="20dp"
		android:top="20dp">
		<shape>
			<solid android:color="#ff2" />
		</shape>
	</item>
	<item
		android:width="60dp"
		android:height="30dp"
		android:left="10dp"
		android:top="40dp">
		<shape>
			<solid android:color="#f22" />
		</shape>
	</item>
	<item
		android:width="70dp"
		android:height="20dp"
		android:left="20dp"
		android:top="70dp">
		<shape>
			<solid android:color="#2f2" />
		</shape>
	</item>
	<item
		android:width="100dp"
		android:height="100dp">
		<inset
			android:insetLeft="30dp"
			android:insetTop="10dp"
			android:insetRight="30dp"
			android:insetBottom="20dp">
			<shape>
				<solid android:color="#22f" />
			</shape>
		</inset>
	</item>
</ripple>